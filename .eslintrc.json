{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-var": 0,
        "no-unused-vars": [
            "error", 
            { 
              "args": "after-used" 
            }
        ],
        "quote-props": [
            "error", 
            "consistent-as-needed"
        ],
        "max-len": [
            "error", 
            120, 
            4,
            { 
              "ignoreComments": true,
              "ignoreStrings": true
            }
        ],
        "indent": [
            "error", 
            4,
            {   
                "SwitchCase" : 1,
                "VariableDeclarator": { "var": 4, "let": 4, "const": 5 },
                "MemberExpression": 1,
                "FunctionExpression": { "parameters": "first" }
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-param-reassign": [
            2, 
            { 
              "props": false
            }
        ],
        "quotes": [
            "error",
            "single",
            {
              "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}